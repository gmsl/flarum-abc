{
    "name": "gmsl/flarum-abc",
    "description": "A Flarum extension that allows alphabetical sorting of posts.",
    "type": "flarum-extension",
    "require": {
        "flarum/core": "^1.8",
        "flarum/tags": "*",
        "blomstra/sort-order-toggle": "*"
    },
    "autoload": {
        "psr-4": {
            "Gmsl\\FlarumAbc\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Alphabetical Sorter",
            "icon": "fas fa-sort-alpha-down",
            "thumbnail": ""
        }
    }
}
